<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projekt.Views.StatisticsPage"
             Title="StatisticsPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            
        </Grid.ColumnDefinitions>

        <Label
             Text="Statystyki"
             FontSize = "40"
             TextColor = "Black"
             FontAttributes = "Bold"
             HorizontalTextAlignment = "Center"
             VerticalTextAlignment = "Center"
             Grid.Column="0"
             Grid.ColumnSpan="4"
             Grid.Row="0"
            />

            
        <Label
            Text="Waga"
            FontSize = "20"
            HorizontalTextAlignment="Center"
            VerticalTextAlignment="Center"
            
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="1"
            
        />

        <Entry
            Placeholder="Wpisz liczbę"
            PlaceholderColor="Grey"
            Grid.Row="3"
            Grid.Column="1"
            VerticalTextAlignment="Center"
            HorizontalTextAlignment="Center"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            x:Name="Weight"
            />

        <Label
            Text="Wzrost"
            FontSize = "20"
            HorizontalTextAlignment="Center"
            VerticalTextAlignment="Center"

            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="2"
            />
        
        <Entry
            Placeholder="Wpisz liczbę"
            PlaceholderColor="Grey"
            Grid.Row="3"
            Grid.Column="2"
            VerticalTextAlignment="Center"
            HorizontalTextAlignment="Center"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            x:Name="Height"
            />

       


    </Grid>
</ContentPage>