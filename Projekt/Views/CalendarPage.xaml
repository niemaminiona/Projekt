<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projekt.Views.CalendarPage"
             Title="CalendarPage">
    
    <VerticalStackLayout BackgroundColor="White" Padding="10" Spacing="10">
        <Grid
            RowDefinitions="*,*"
            ColumnDefinitions="*,*,*,*"
            ColumnSpacing="5"
            >
            <Label
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                x:Name="monthLabel"
                FontSize="50"
                FontAttributes="Bold"
                Margin="0,10,0,10"
                TextColor="Black"
                />
            <Label
                Grid.Row="0"
                Grid.Column="3"
                x:Name="yearLabel"
                FontSize="25"
                FontAttributes="Bold"
                HorizontalOptions="End"
                VerticalOptions="Start"
                TextColor="Black"
                />
            <Border
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Stroke="Black"
                StrokeThickness="2"
                StrokeShape="RoundRectangle 6">
                <Button
                    Text="&lt;"
                    Clicked="LeftSwitchButton_Clicked"
                    BackgroundColor="LightGray"
                    TextColor="Black"
                    FontSize="20"
                    FontAttributes="Bold" />
            </Border>
            <Border
                Grid.Row="1"
                Grid.Column="2"
                Grid.ColumnSpan="2"
                Stroke="Black"
                StrokeThickness="2"
                StrokeShape="RoundRectangle 6">
                <Button
                    Text="&gt;"
                    Clicked="RightSwitchButton_Clicked"
                    BackgroundColor="LightGray"
                    TextColor="Black"
                    FontSize="20"
                    FontAttributes="Bold" />
            </Border>
        </Grid>
        
        
        <Border
            Background="White"
            Stroke="Black"
            StrokeThickness="2"
            >
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="8"/>
            </Border.StrokeShape>
            <Grid
                ColumnDefinitions="*,*,*,*,*,*,*"
                RowDefinitions="*,*,*,*,*"
                x:Name="CalendarGrid"
                ColumnSpacing="2"
                RowSpacing="2"
                Padding="3"
                />
        </Border>
        
        
        <Border
            x:Name="dayBorder"
            Background="White"
            Stroke="Black"
            StrokeThickness="2"
            >
            
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="8"/>
            </Border.StrokeShape>
            
            <VerticalStackLayout 
                x:Name="dayInfo"
                Padding="5"
                />
        </Border>
    </VerticalStackLayout>
</ContentPage>