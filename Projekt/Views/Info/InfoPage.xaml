<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projekt.Views.Info.InfoPage"
             Title="InfoPage">

    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="10" BackgroundColor="White">
            <Label 
                Text="Information"
                HorizontalOptions="Center"
                TextColor="Black"
                FontSize="25"
                FontAttributes="Bold"
                Padding="50"
                />
            <VerticalStackLayout x:Name="InfoLayout" Spacing="10" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
