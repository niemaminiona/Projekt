<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projekt.Views.Info.InfoPage"
             Title="InfoPage">
    <Grid>
        <ScrollView>
            <VerticalStackLayout Padding="10" Spacing="10" BackgroundColor="White">
                <Label 
                    Text="Information"
                    HorizontalOptions="Center"
                    TextColor="Black"
                    FontSize="25"
                    FontAttributes="Bold"
                    Padding="50"
                    />
                <Grid ColumnDefinitions="5*,*">
                    <Label
                        Grid.Column="0"
                        HorizontalOptions="End"
                        VerticalOptions="Center"
                        Text="Search on internet:"
                        TextColor="Black"/>
                    <Switch
                        x:Name="SearchOnInternetSwitch"
                        Grid.Column="1"
                        HeightRequest="10"
                        HorizontalOptions="Center"
                        Toggled="searchChanged"
                        />
                </Grid>
                <VerticalStackLayout x:Name="InfoLayout" Spacing="10" />
            </VerticalStackLayout>
        </ScrollView>
        
        <!-- boxview ktory symuluje cień miedzy scrollview a menu -->
        <BoxView HeightRequest="1"
         BackgroundColor="Black"
         VerticalOptions="End">
            <BoxView.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#40000000" Offset="0" />
                    <GradientStop Color="Transparent" Offset="1" />
                </LinearGradientBrush>
            </BoxView.Background>
        </BoxView>
    </Grid>
    
</ContentPage>
