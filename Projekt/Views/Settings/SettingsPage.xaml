<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projekt.Views.Settings.SettingsPage"
             Title="SettingsPage">
    <ScrollView>
        <VerticalStackLayout>
            <Label 
                Text="Settings"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Padding="75"
                FontAttributes="Bold"
                FontSize="30"
                />
            <Border
                BackgroundColor="#C9C9C9"
                Margin="10"
                Stroke="Grey"
                StrokeShape="RoundRectangle 10"
                >
                <VerticalStackLayout Padding="0,5,0,5" Spacing="5">

                    <Grid BackgroundColor="Transparent" ColumnDefinitions="*,6*,*" HeightRequest="40">
                        <!--Caly grid jest teraz buttonem oraz wykonuje funckje-->
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="GoToNotificationSettings"/>
                        </Grid.GestureRecognizers>
                        <!---->
                        <Image Source="notification.svg" Grid.Column="0"/>
                        <Label Text="Notifications" Grid.Column="1" VerticalTextAlignment="Center" HorizontalTextAlignment="Start" FontSize="15" FontAttributes="Bold"/>
                        <Label Text=">" Grid.Column="2" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontSize="15" FontAttributes="Bold"/>
                    </Grid>

                    
                    <BoxView
                        BackgroundColor="Grey"
                        HeightRequest="1"
                        HorizontalOptions="Fill"
                        />

                    
                    <Grid BackgroundColor="Transparent" ColumnDefinitions="*,6*,*" HeightRequest="40">
                        <!--Caly grid jest teraz buttonem oraz wykonuje funckje-->
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="GoToViewSettings"/>
                        </Grid.GestureRecognizers>
                        <!---->
                        <Image Source="view2.svg" Grid.Column="0" HeightRequest="35"/>
                        <Label Text="View" Grid.Column="1" VerticalTextAlignment="Center" HorizontalTextAlignment="Start" FontSize="15" FontAttributes="Bold"/>
                        <Label Text=">" Grid.Column="2" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontSize="15" FontAttributes="Bold"/>
                    </Grid>
                    
                    
                    <BoxView
                        BackgroundColor="Grey"
                        HeightRequest="1"
                        HorizontalOptions="Fill"
                        />


                    <Grid BackgroundColor="Transparent" ColumnDefinitions="*,6*,*" HeightRequest="40">
                        <!--Caly grid jest teraz buttonem oraz wykonuje funckje-->
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="GoToLanguageSettings"/>
                        </Grid.GestureRecognizers>
                        <!---->
                        <Image Source="language.svg" Grid.Column="0" HeightRequest="30"/>
                        <Label Text="Language" Grid.Column="1" VerticalTextAlignment="Center" HorizontalTextAlignment="Start" FontSize="15" FontAttributes="Bold"/>
                        <Label Text=">" Grid.Column="2" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontSize="15" FontAttributes="Bold"/>
                    </Grid>
                </VerticalStackLayout>
            </Border>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>