<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Projekt.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Projekt.Views"
    Title="Projekt"
    Shell.NavBarIsVisible="False"
    Shell.TabBarBackgroundColor="LightGray"
    Shell.TabBarTitleColor="Black"
    >

    <TabBar>
        <!-- Info Tab -->
        <ShellContent
        Title="Info"
        Icon="info.png"
        ContentTemplate="{DataTemplate views:InfoPage}" />

        <!-- Calendar Tab -->
        <ShellContent
        Title="Calendar"
        Icon="calendar.png"
        ContentTemplate="{DataTemplate views:CalendarPage}" />

        <!-- Home Tab -->
        <ShellContent
        Title="Home"
        Icon="home.png"
        ContentTemplate="{DataTemplate views:HomePage}" />

        <!-- Statistics Tab -->
        <ShellContent
        Title="Stats"
        Icon="stats.png"
        ContentTemplate="{DataTemplate views:StatisticsPage}" />

        <!-- Settings Tab -->
        <ShellContent
        Title="Settings"
        Icon="settings.png"
        ContentTemplate="{DataTemplate views:SettingsPage}" />
    </TabBar>


</Shell>
