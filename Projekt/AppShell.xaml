<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Projekt.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Projekt.Views"
    xmlns:info="clr-namespace:Projekt.Views.Info"
    xmlns:home="clr-namespace:Projekt.Views.Home"
    xmlns:settings="clr-namespace:Projekt.Views.Settings"
    Title="Projekt"
    Shell.NavBarIsVisible="False"
    Shell.TabBarBackgroundColor="#FFC9C9C9"
    Shell.TabBarTitleColor="Black"
    Shell.TabBarForegroundColor="Black"
    Shell.TabBarUnselectedColor="#FF363636"
    >
    
    <TabBar>
        <!-- Info Tab -->
        <ShellContent
        Title="Info"
        Icon="info.svg"
        ContentTemplate="{DataTemplate info:InfoPage}" />

        <!-- Calendar Tab -->
        <ShellContent
        Title="Calendar"
        Icon="calendar.svg"
        ContentTemplate="{DataTemplate views:CalendarPage}" />

        <!-- Home Tab -->
        <ShellContent
        Route="Home"
        Title="Home"
        Icon="home.svg"
        ContentTemplate="{DataTemplate home:HomePage}" />

        <!-- Statistics Tab -->
        <ShellContent
        Title="Stats"
        Icon="stats.svg"
        ContentTemplate="{DataTemplate views:StatisticsPage}" />

        <!-- Settings Tab -->
        <ShellContent
        Title="Settings"
        Icon="settings.svg"
        ContentTemplate="{DataTemplate settings:SettingsPage}" />
    </TabBar>

</Shell>
